    <% include partials/_header %>

    <div class="container">
        <h1 class="text-center display-4 ">A Simple CRUD Application</h1>
        <div class="row col-md-8 offset-md-2">
            <div class="card bg-light mt-4 w-100">
                <div class="card-body">
                    <h5 class="card-title"><strong>What is this?</strong></h5>
                    <p class="card-text">This is a simple CRUD application made with Node.js, Express and MongoDB.</p>
                </div>
            </div>
        </div>
        <div class="row mb-4 mt-4">
            <!-- FORM -->
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="post">
                            <div class="form-group">
                                <label for="firstName">First Name</label>
                                <input class="form-control" type="text" name="firstName" placeholder="First Name">
                            </div>
                            <div class="form-group">
                                <label for="lastName">Last Name</label>
                                <input class="form-control" type="text" name="lastName" placeholder="Last Name">
                            </div>
                            <div class="form-group">
                                <label for="email">Email Address</label>
                                <input class="form-control" type="text" name="email" placeholder="Email Address">
                            </div>
                            <button class="btn btn-primary" type="Submit" value="Add">Add User</button>
                        </form>
                    </div>
                </div>
                
                    <% if(errors != undefined) { %>
                        <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
                            <ul>
                                <% errors.forEach((err) => { %>
                                    <li> <%= err.msg %> </li>
                                <% }) %>
                            </ul>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>  
                    <% } %>
                
                
            </div>
        </div>
        <!-- LIST -->
        <div class="row mb-4 mt-4">
            <div class="col-md-10 offset-md-1">
                    <input class="form-control" id="myInput" type="text" placeholder="Search...">
                    <table class="table table-bordered table-hover mt-4">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="myTable">
                            <% for(var i = 0; i < clients.length; i++) { %>
                                <tr>
                                    <td><%= i + 1 %></td>
                                    <td><%= clients[i].first_name %></td>
                                    <td><%= clients[i].last_name %></td>
                                    <td><%= clients[i].email %></td>
                                    <td class="text-center">
                                        <a href="/edit/<%= clients[i]._id %>" class="btn btn-primary">Edit User</a>
                                        <a href="/delete/<%= clients[i]._id %>" class="btn btn-danger">Delete User</a>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
        </div>
    </div>

    <% include partials/_footer %>